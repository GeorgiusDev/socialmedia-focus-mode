{
    "manifest_version": 3,
    "name": "Social Media Focus Mode",
    "version": "1.0",
    "description": "Removes YouTube recommendations, Shorts, Trending and more...",
    "permissions": ["storage"],
    "host_permissions": ["*://www.youtube.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["content.js"],
            "css": ["styles.css"],
            "run_at": "document_idle"
        }
    ]
}
