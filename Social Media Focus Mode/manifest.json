{
    "manifest_version": 3,
    "name": "Social Media Focus Mode",
    "version": "1.1",
    "description": "Removes Distractions from YouTube and Instagram.",
    "permissions": ["storage"],
    "host_permissions": [
        "*://www.youtube.com/*",
        "*://www.instagram.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["yt-content.js"],
            "css": ["yt-styles.css"],
            "run_at": "document_idle"
        },
        {
            "matches": ["*://www.instagram.com/*"],
            "js": ["ig-content.js"],
            "css": ["ig-styles.css"],
            "run_at": "document_idle"
        }
    ]
}
